{
  "manifest_version": 3,
  "name": "NJU 自动登录助手",
  "version": "2.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://authserver.nju.edu.cn/*"],
      "js": ["tesseract.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["langs/*", "icon48.png"],
      "matches": ["<all_urls>"]
    }
  ]
}